<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <SurfaceView
        android:id="@+id/surfacedrawpoint"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.pfldv3.internal.view.BaseCameraView
        android:id="@+id/camera_view"
        style="@style/main_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:gravity="bottom"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginStart="2sp"
                android:layout_weight="1"
                android:orientation="vertical">

<!--                <Button-->
<!--                    android:id="@+id/btn_take_off"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="60dp"-->
<!--                    android:layout_alignParentBottom="true"-->
<!--                    android:text="Take Off"-->
<!--                    android:textSize="@dimen/normal_font_size" />-->

                <ImageButton
                    android:id="@+id/btn_take_off"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/takeoff" />

                <ImageButton
                    android:id="@+id/btn_auto_land"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:layout_above="@+id/btn_take_off"
                    android:layout_marginBottom="25sp"
                    android:src="@drawable/arrving" />

                <Button
                    android:id="@+id/EyeTrack"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30sp"
                    android:layout_toRightOf="@+id/btn_take_off"
                    android:text="EyeTrack"
                    android:textSize="@dimen/normal_font_size" />

<!--                <Button-->
<!--                    android:id="@+id/btn_auto_land"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="60dp"-->
<!--                    android:layout_above="@+id/btn_take_off"-->
<!--                    android:layout_marginBottom="25sp"-->
<!--                    android:text="Auto Land"-->
<!--                    android:textSize="@dimen/normal_font_size" />-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginEnd="2sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/satellite_logo"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginTop="2sp"
                        android:layout_toLeftOf="@+id/satellite"
                        android:layout_marginRight="5sp"
                        android:src="@drawable/satellite"/>

                    <TextView
                        android:id="@+id/satellite"
                        android:layout_width="50sp"
                        android:layout_height="20sp"
                        android:layout_marginTop="2sp"
                        android:layout_toLeftOf="@+id/battery_image"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/battery_image"
                        android:layout_width="30sp"
                        android:layout_height="20sp"
                        android:layout_toLeftOf="@+id/battery"
                        android:src="@drawable/battery_good"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/battery"
                        android:layout_width="50sp"
                        android:layout_height="20sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2sp"
                        android:text="100%"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="100sp"
                        android:layout_height="78sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/imageResultbg"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/movestateView"
                        android:layout_width="100sp"
                        android:layout_height="200sp"
                        android:layout_alignParentRight="true"
                        android:layout_above="@+id/imageView"
                        android:textColor="@color/colorRed"
                        android:textSize="12sp" />

                    <com.jaygoo.widget.VerticalRangeSeekBar
                        android:id="@+id/sb_vertical_6"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/imageView"
                        android:layout_marginRight="50dp"
                        app:rsb_mode="single"
                        app:rsb_progress_color="@color/colorAccent"
                        app:rsb_step_auto_bonding="true"
                        app:rsb_step_color="@color/colorAccent"
                        app:rsb_step_height="15dp"
                        app:rsb_step_radius="12.5dp"
                        app:rsb_step_width="15dp"
                        app:rsb_steps="2"
                        app:rsb_thumb_drawable="@drawable/thumb_green"
                        app:rsb_thumb_height="25dp"
                        app:rsb_thumb_scale_ratio="1.25"
                        app:rsb_thumb_width="25dp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.example.pfldv3.internal.view.BaseCameraView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/grid"/>
</RelativeLayout>