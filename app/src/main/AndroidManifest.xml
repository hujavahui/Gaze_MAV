    ADD API_KEY HERE and make sure you
    are connected to the Internet before
    the app is launched
        -->
        <!-- personal key -->
        <meta-data
            android:name="com.dji.sdk.API_KEY"
            android:value="3dc4a2213ba6c167578ea95e" />
        <!--
 Required for receiving accessory attachment events.
            This is necessary for product when connecting over USB.
        -->
        <activity
            android:name=".InferenceNewActivity"
            android:exported="false" />
        <activity
            android:name=".HeadPosActivity"
            android:exported="false" />
        <activity
            android:name=".MainUI"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
